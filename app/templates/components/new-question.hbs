{{#if addNewQuestion}}
  <h1>Add New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="quester">Name</label>
        {{input value=quester id="quester"}}
      </div>
      <div class="form-group">
        <label for="quest">Question</label>
        {{input value=quest id="quest"}}
      </div>
      <div class="form-group">
        <label for="notes">Notes</label>
        {{textarea value=notes id="notes"}}
      </div>
      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}

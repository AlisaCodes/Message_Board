{{yield}}
{{#if updateQuestionForm}}
  <h4>Update {{question.quester}}'s Question</h4>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="quester">Name</label>
        {{input value=quester id="quester" class="form-control" placeholder=question.quester}}
      </div>

      <div class="form-group">
        <label for="quest">Question</label>
        {{input value=quest id="quest" class="form-control" placeholder=question.quest}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" class="form-control" placeholder=question.notes}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-danger"{{action 'updateQuestionForm'}}>Edit</button>
{{/if}}

{{#if addNewAnswer}}
  <h1>Add New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="responder">Name</label>
        {{input value=responder id="responder"}}
      </div>
      <div class="form-group">
        <label for="response">Answer</label>
        {{input value=response id="response"}}
      </div>

      <button class="btn btn-primary" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button class="btn btn-primary" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
